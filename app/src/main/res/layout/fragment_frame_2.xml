<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorOffwhite"
    >

    <!-- Rectangle 1 -->
    <View
        android:id="@drawable/ic_bubbles_1"
        android:layout_width="414dp"
        android:layout_height="872dp"
        android:background="@drawable/ic_bubbles_1"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="496dp"
        android:layout_marginBottom="336dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_content"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher_background"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/detect_button"
        android:layout_width="175dp"
        android:layout_height="63dp"
        android:background="@drawable/rectangle_1"
        android:elevation="50dp"
        android:fontFamily="@font/red_hat_display_black"
        android:text="@string/detect"
        android:textAppearance="@style/detect"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/select_another_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97" />

    <TextView
        android:id="@+id/select_another_button"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/red_hat_display_medium"
        android:text="@string/try_another"
        android:textAlignment="center"
        android:textAppearance="@style/try_another"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.937" />

    <TextView
        android:id="@+id/score_text"
        style="@style/conf_secondary"
        android:layout_width="372dp"
        android:layout_height="37dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/red_hat_display_black"
        android:text="scoreText"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_on_secondary"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/detect_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.165" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="334dp"
        android:layout_height="41dp"
        android:fontFamily="@font/red_hat_display_black"
        android:text="comment"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/detect_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.651" />

    <TextView
        android:id="@+id/this_is_mac"
        android:layout_width="305dp"
        android:layout_height="229dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/red_hat_display_black"
        android:gravity="center_horizontal|top"
        android:text="@string/this_is_mac"
        android:textAppearance="@style/this_is_mac"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />


    <Button
        android:id="@+id/select_button"
        android:layout_width="208dp"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle_1"
        android:elevation="35dp"
        android:fontFamily="@font/red_hat_display_black"
        android:text="@string/select_an_i"
        android:textAppearance="@style/select_an_i"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.754" />

</androidx.constraintlayout.widget.ConstraintLayout>
