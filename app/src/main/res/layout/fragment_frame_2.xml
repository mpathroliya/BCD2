<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ic_bubbles_1"
    >

    <!-- Rectangle 1 -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="752dp"
        android:layout_height="496dp"
        android:layout_marginBottom="336dp"
        android:contentDescription="@string/image_content"
        android:src="@drawable/ic_launcher_background"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/detect_button"
        android:layout_width="175dp"
        android:layout_height="63dp"
        android:background="@drawable/rectangle_1"
        android:elevation="50dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/select_another_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96" />

    <View
        android:id="@+id/select_another_button"
        android:layout_width="175dp"
        android:layout_height="63dp"
        android:background="@drawable/rectangle_1"
        android:elevation="50dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <TextView
        android:id="@+id/detect"
        android:layout_width="75dp"
        android:layout_height="24dp"
        android:elevation="66dp"
        android:fontFamily="@font/red_hat_display_black"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="3sp"
        android:text="@string/detect"
        android:textAppearance="@style/detect"
        android:translationY="-1.75sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/detect_button"
        app:layout_constraintEnd_toEndOf="@+id/detect_button"
        app:layout_constraintStart_toStartOf="@+id/detect_button"
        app:layout_constraintTop_toTopOf="@+id/detect_button" />

    <TextView
        android:id="@+id/select_another_text"
        android:layout_width="125dp"
        android:layout_height="33dp"
        android:elevation="66dp"
        android:fontFamily="@font/red_hat_display_black"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="3sp"
        android:text="@string/try_another"
        android:textAppearance="@style/detect"
        android:translationY="-1.75sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/select_another_button"
        app:layout_constraintEnd_toEndOf="@+id/select_another_button"
        app:layout_constraintStart_toStartOf="@+id/select_another_button"
        app:layout_constraintTop_toTopOf="@+id/select_another_button"
        app:layout_constraintVertical_bias="0.65" />

    <TextView
        android:id="@+id/score_text"
        style="@style/conf_secondary"
        android:layout_width="372dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/red_hat_display_black"
        android:text="scoreText"
        android:textColor="@color/design_default_color_on_secondary"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/detect_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="333dp"
        android:layout_height="80dp"
        android:fontFamily="@font/red_hat_display_black"
        android:text="comment"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/detect_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.64" />

    <TextView
        android:id="@+id/this_is_mac"
        android:layout_width="305dp"
        android:layout_height="229dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/red_hat_display_black"
        android:gravity="center_horizontal|top"
        android:text="@string/this_is_mac"
        android:textAppearance="@style/this_is_mac"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:id="@+id/select_an_i"
        android:layout_width="171dp"
        android:layout_height="26dp"
        android:elevation="60dp"
        android:fontFamily="@font/red_hat_display_black"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="4sp"
        android:text="@string/select_an_i"
        android:textAppearance="@style/select_an_i"
        android:translationY="-2.22sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/select_button"
        app:layout_constraintEnd_toEndOf="@+id/select_button"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/select_button"
        app:layout_constraintTop_toTopOf="@+id/select_button"
        app:layout_constraintVertical_bias="0.56" />

    <View
        android:id="@+id/select_button"
        android:layout_width="208dp"
        android:layout_height="83dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle_1"
        android:elevation="35dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.754" />

</androidx.constraintlayout.widget.ConstraintLayout>
